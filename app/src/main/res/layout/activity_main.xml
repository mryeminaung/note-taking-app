<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/main"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <!-- NavHostFragment takes all space above BottomNavigationView -->
  <androidx.fragment.app.FragmentContainerView
    android:id="@+id/nav_host_fragment"
    android:name="androidx.navigation.fragment.NavHostFragment"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:defaultNavHost="true"
    app:layout_constraintBottom_toTopOf="@id/bottomNav"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:navGraph="@navigation/main_nav_graph" />

  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/bottom_top"
    app:layout_constraintBottom_toTopOf="@+id/bottomNav" />

  <!-- BottomNavigationView fixed at bottom -->
  <com.google.android.material.bottomnavigation.BottomNavigationView
    android:id="@+id/bottomNav"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_nav_bg"
    android:backgroundTint="@color/white"
    app:itemActiveIndicatorStyle="@android:color/white"
    app:itemIconSize="25dp"
    app:itemIconTint="@color/bottom_nav"
    app:itemTextAppearanceActive="@style/BottomNavigationActiveText"
    app:itemTextAppearanceInactive="@style/BottomNavigationInactiveText"
    app:labelVisibilityMode="auto"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:menu="@menu/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
