<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/note_detail_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/sticky_blue"
  android:paddingHorizontal="20dp"
  android:paddingTop="30dp">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/edit_note_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="30dp"
    android:contentDescription="Edit Note"
    android:scaleX="1.3"
    android:scaleY="1.3"
    android:src="@drawable/ic_edit"
    app:backgroundTint="@color/floating_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
    app:strokeColor="@color/floating_stroke"
    app:strokeWidth="1dp" />

  <TextView
    android:id="@+id/backToNotesBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="35dp"
    android:drawableStart="@drawable/ic_arrow_back"
    android:text="Notes"
    android:textColor="@color/black"
    android:textSize="19sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/noteTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="Sample Note Title"
    android:textColor="@color/black"
    android:textSize="25sp"
    android:textStyle="bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/backToNotesBtn" />

  <ScrollView
    android:id="@+id/noteDetail"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="100dp"
    app:layout_constraintTop_toBottomOf="@id/noteTitle">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:id="@+id/noteBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is a sample note body text that will appear in the preview. You can see how your layout looks with actual content."
        android:textColor="#333333"
        android:textSize="16sp" />
    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>