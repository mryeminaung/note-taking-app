<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/notes_fragment"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/app_bg"
  android:paddingHorizontal="20dp"
  android:paddingTop="20dp">

  <!-- Floating Add Button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/new_note_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="30dp"
    android:contentDescription="Add Note"
    android:scaleX="1.1"
    android:scaleY="1.1"
    android:src="@drawable/ic__note_add"
    app:backgroundTint="@color/floating_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
    app:strokeColor="@color/floating_stroke"
    app:strokeWidth="1dp" />

  <!-- Header -->
  <LinearLayout
    android:id="@+id/note_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Texts -->
    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:id="@+id/header_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Notes"
        android:textColor="@color/app_text"
        android:textSize="28sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/header_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Your daily notes that remind you"
        android:textColor="@color/app_text"
        android:textSize="15sp" />
    </LinearLayout>

    <!-- Icon -->
    <ImageView
      android:id="@+id/sortBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_sort" />
  </LinearLayout>

  <!-- Search Bar -->
  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/note_search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    app:boxBackgroundMode="outline"
    app:boxCornerRadiusBottomEnd="50dp"
    app:boxCornerRadiusBottomStart="50dp"
    app:boxCornerRadiusTopEnd="50dp"
    app:boxCornerRadiusTopStart="50dp"
    app:boxStrokeColor="@color/sticky_gray"
    app:hintEnabled="false"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/note_header"
    app:startIconDrawable="@drawable/ic_search"
    app:startIconTint="#8A8A8A">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/note_search"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:hint="Search notes..."
      android:inputType="text"
      android:padding="12dp"
      android:scrollHorizontally="true"
      android:singleLine="true" />
  </com.google.android.material.textfield.TextInputLayout>

  <!-- TabLayout -->
  <com.google.android.material.tabs.TabLayout
    android:id="@+id/note_tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/app_bg"
    android:elevation="2dp"
    app:layout_constraintTop_toBottomOf="@id/note_search_layout"
    app:tabGravity="fill"
    app:tabIndicatorColor="@color/deep_blue"
    app:tabIndicatorFullWidth="true"
    app:tabIndicatorHeight="3dp"
    app:tabMode="fixed"
    app:tabSelectedTextColor="@color/deep_blue"
    app:tabTextColor="#6B7280">

    <com.google.android.material.tabs.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="All Notes" />

    <com.google.android.material.tabs.TabItem
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Starred Notes" />
  </com.google.android.material.tabs.TabLayout>

  <!-- Empty State -->
  <LinearLayout
    android:id="@+id/emptyState"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/note_tabs">

    <ImageView
      android:id="@+id/emptyImage"
      android:layout_width="200dp"
      android:layout_height="300dp"
      android:src="@drawable/add_note" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="You have no notes yet!"
      android:textColor="@color/app_text"
      android:textSize="16sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap the "
        android:textColor="@color/app_text"
        android:textSize="16sp" />

      <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:contentDescription="Add button"
        android:src="@drawable/ic_add" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" button to add your first note."
        android:textColor="@color/app_text"
        android:textSize="16sp" />
    </LinearLayout>
  </LinearLayout>

  <!-- RecyclerView -->
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/notes_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/note_tabs"
    tools:itemCount="3"
    tools:listitem="@layout/fragment_note_card" />

  <TextView
    android:id="@+id/emptyText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Loading Spinner -->
  <ProgressBar
    android:id="@+id/loadingSpinner"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
