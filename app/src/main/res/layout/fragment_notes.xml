<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/notes_fragment"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="20dp">

  <!-- Floating Add Button -->
  <com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/addNoteFab"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="100dp"
    android:contentDescription="Add Note"
    android:scaleX="1.2"
    android:scaleY="1.2"
    android:src="@drawable/ic_add"
    app:backgroundTint="@android:color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
    app:strokeColor="#D5D5D5"
    app:strokeWidth="1dp" />

  <!-- Header -->
  <LinearLayout
    android:id="@+id/note_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:orientation="vertical"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
      android:id="@+id/header_1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="My Notes"
      android:textColor="#111827"
      android:textSize="30sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/header_2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:text="Your daily notes that remind you"
      android:textColor="#6B7280"
      android:textSize="16sp" />
  </LinearLayout>

  <!-- Search Input (original EditText style) -->
  <EditText
    android:id="@+id/note_search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/input_bg"
    android:drawableEnd="@drawable/ic_search"
    android:drawableTint="#8A8A8A"
    android:hint="Search notes..."
    android:padding="12dp"
    app:layout_constraintTop_toBottomOf="@id/note_header" />

  <!-- Tabs -->
  <com.google.android.material.tabs.TabLayout
    android:id="@+id/note_tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toBottomOf="@id/note_search"
    app:tabIndicatorColor="@color/deep_blue"
    app:tabIndicatorFullWidth="false"
    app:tabMode="fixed"
    app:tabSelectedTextColor="@color/deep_blue"
    app:tabTextColor="#6B7280">

    <com.google.android.material.tabs.TabItem
      android:id="@+id/tab_all_notes"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="All Notes" />

    <com.google.android.material.tabs.TabItem
      android:id="@+id/tab_starred_notes"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="Starred Notes" />
  </com.google.android.material.tabs.TabLayout>

  <!-- Notes Scroll -->
  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/notes_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="70dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/note_tabs" />

</androidx.constraintlayout.widget.ConstraintLayout>
