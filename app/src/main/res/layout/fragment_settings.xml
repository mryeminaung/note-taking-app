<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/app_bg"
  android:fillViewport="true"
  tools:context=".fragments.SettingsFragment">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <!-- Profile Header Background -->
    <View
      android:id="@+id/avatar_bg"
      android:layout_width="match_parent"
      android:layout_height="330dp"
      android:background="@drawable/avatar_bg" />

    <!-- Profile Header -->
    <LinearLayout
      android:id="@+id/profileHeader"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-240dp"
      android:gravity="center"
      android:orientation="vertical">

      <!-- FrameLayout to overlay button on profile image -->
      <FrameLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginBottom="10dp">

        <ImageView
          android:id="@+id/imgAvatar"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@drawable/circle_bg"
          android:padding="8dp"
          android:scaleType="centerCrop"
          android:src="@drawable/account_circle" />

        <ImageButton
          android:id="@+id/editProfileBtn"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_gravity="bottom|end"
          android:layout_margin="0dp"
          android:background="@drawable/circle_bg"
          android:contentDescription="Edit Profile Picture"
          android:padding="4dp"
          android:scaleType="centerInside"
          android:src="@drawable/ic_edit" />
      </FrameLayout>

      <TextView
        android:id="@+id/authName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ye Min Aung"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/authEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yeminaung.dev@gmail.com"
        android:textColor="@color/white"
        android:textSize="14sp" />

    </LinearLayout>


    <!-- Settings Card -->
    <androidx.cardview.widget.CardView
      android:id="@+id/settingCard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="@color/app_bg"
      app:cardCornerRadius="@dimen/auth_card_radius"
      app:cardElevation="3dp">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
            android:id="@+id/tvNotesSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Notes Summary"
            android:textColor="@color/app_text"
            android:textSize="16sp"
            android:textStyle="bold" />

          <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

          <ImageView
            android:id="@+id/syncNotes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_fluent_document_sync_24_filled" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <androidx.cardview.widget.CardView
            android:id="@+id/notesCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/summary_card"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

              <TextView
                android:id="@+id/tvNotesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="@color/summary_text"
                android:textSize="15sp"
                android:textStyle="bold" />

              <TextView
                android:id="@+id/tvNotesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <!-- Starred Card -->
          <androidx.cardview.widget.CardView
            android:id="@+id/starredCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/summary_card"
            app:cardCornerRadius="12dp"
            app:cardElevation="3dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

              <TextView
                android:id="@+id/tvStarredTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starred"
                android:textColor="@color/summary_text"
                android:textSize="15sp"
                android:textStyle="bold" />

              <TextView
                android:id="@+id/tvStarredCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="22sp"
                android:textStyle="bold" />

            </LinearLayout>
          </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Settings Title -->
        <TextView
          android:id="@+id/tvNotesSettings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Settings"
          android:textColor="@color/app_text"
          android:textSize="16sp"
          android:textStyle="bold" />

        <!-- Settings Rows -->
        <LinearLayout
          android:id="@+id/settingsRows"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:orientation="vertical">

          <!-- Change Username -->
          <LinearLayout
            android:id="@+id/rowChangeUsername"
            style="@style/SettingRow">

            <ImageView
              style="@style/SettingRowIcon"
              android:src="@drawable/ic_person" />

            <TextView
              style="@style/SettingRowText"
              android:text="Change Username" />

            <ImageView
              android:id="@+id/userNameArrow"
              style="@style/SettingRowChevron"
              android:src="@drawable/ic_chevron_right" />
          </LinearLayout>

          <androidx.cardview.widget.CardView
            android:id="@+id/userNameCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/theme_card"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

              <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Enter Username"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/form_input_radius"
                app:boxCornerRadiusBottomStart="@dimen/form_input_radius"
                app:boxCornerRadiusTopEnd="@dimen/form_input_radius"
                app:boxCornerRadiusTopStart="@dimen/form_input_radius"
                app:boxStrokeColor="@color/deep_blue"
                app:hintTextColor="@color/deep_blue">

                <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/usernameEdit"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:inputType="textPersonName"
                  android:padding="12dp" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.button.MaterialButton
                android:id="@+id/usernameChangeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/deep_blue"
                android:text="Change"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cornerRadius="30dp" />
            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:background="@color/sticky_gray" />

          <!-- Change Password -->
          <LinearLayout
            android:id="@+id/rowChangePassword"
            style="@style/SettingRow">

            <ImageView
              style="@style/SettingRowIcon"
              android:src="@drawable/ic_lock" />

            <TextView
              style="@style/SettingRowText"
              android:text="Change Password" />

            <ImageView
              android:id="@+id/pwdArrow"
              style="@style/SettingRowChevron"
              android:src="@drawable/ic_chevron_right" />
          </LinearLayout>

          <androidx.cardview.widget.CardView
            android:id="@+id/pwdCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/theme_card"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="10dp">

              <!-- Old Password -->
              <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Old Password"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/form_input_radius"
                app:boxCornerRadiusBottomStart="@dimen/form_input_radius"
                app:boxCornerRadiusTopEnd="@dimen/form_input_radius"
                app:boxCornerRadiusTopStart="@dimen/form_input_radius"
                app:boxStrokeColor="@color/deep_blue"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/deep_blue">

                <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/oldPasswordEdit"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:inputType="textPassword"
                  android:padding="12dp" />
              </com.google.android.material.textfield.TextInputLayout>

              <!-- New Password -->
              <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="New Password"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="@dimen/form_input_radius"
                app:boxCornerRadiusBottomStart="@dimen/form_input_radius"
                app:boxCornerRadiusTopEnd="@dimen/form_input_radius"
                app:boxCornerRadiusTopStart="@dimen/form_input_radius"
                app:boxStrokeColor="@color/deep_blue"
                app:endIconMode="password_toggle"
                app:hintTextColor="@color/deep_blue">

                <com.google.android.material.textfield.TextInputEditText
                  android:id="@+id/newPasswordEdit"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:inputType="textPassword"
                  android:padding="12dp" />
              </com.google.android.material.textfield.TextInputLayout>

              <com.google.android.material.button.MaterialButton
                android:id="@+id/pwdChangeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/deep_blue"
                android:text="Change"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cornerRadius="30dp" />
            </LinearLayout>
          </androidx.cardview.widget.CardView>

          <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:background="@color/sticky_gray" />

          <!-- Theme Preference -->
          <LinearLayout
            android:id="@+id/rowChangeTheme"
            style="@style/SettingRow">

            <ImageView
              style="@style/SettingRowIcon"
              android:src="@drawable/ic_palette" />

            <TextView
              style="@style/SettingRowText"
              android:text="Theme Preference" />

            <ImageView
              android:id="@+id/themeArrow"
              style="@style/SettingRowChevron"
              android:src="@drawable/ic_chevron_right" />
          </LinearLayout>
        </LinearLayout>

        <!-- Theme Card -->
        <androidx.cardview.widget.CardView
          android:id="@+id/themeCard"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="15dp"
          android:backgroundTint="@color/theme_card"
          android:visibility="gone"
          app:cardCornerRadius="12dp"
          app:cardElevation="2dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <!-- Dark mode -->
            <androidx.cardview.widget.CardView
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_margin="6dp"
              android:layout_weight="1"
              app:cardCornerRadius="12dp"
              app:cardElevation="3dp">

              <LinearLayout
                android:id="@+id/darkCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                  android:id="@+id/iconMoon"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:scaleType="fitCenter"
                  android:src="@drawable/ic_moon" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:text="Dark"
                  android:textColor="@color/black"
                  android:textSize="12sp" />
              </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- System mode -->
            <androidx.cardview.widget.CardView
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_margin="6dp"
              android:layout_weight="1"
              app:cardCornerRadius="12dp"
              app:cardElevation="3dp">

              <LinearLayout
                android:id="@+id/sysCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                  android:id="@+id/iconSys"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:scaleType="fitCenter"
                  android:src="@drawable/ic_theme_settings" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:text="System"
                  android:textColor="@color/black"
                  android:textSize="12sp" />
              </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Light mode -->
            <androidx.cardview.widget.CardView
              android:layout_width="0dp"
              android:layout_height="90dp"
              android:layout_margin="6dp"
              android:layout_weight="1"
              app:cardCornerRadius="12dp"
              app:cardElevation="3dp">

              <LinearLayout
                android:id="@+id/lightCard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                  android:id="@+id/iconSun"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:scaleType="fitCenter"
                  android:src="@drawable/ic_sun" />

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:text="Light"
                  android:textColor="@color/black"
                  android:textSize="12sp" />
              </LinearLayout>
            </androidx.cardview.widget.CardView>

          </LinearLayout>
        </androidx.cardview.widget.CardView>

      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Logout Button -->
    <com.google.android.material.button.MaterialButton
      android:id="@+id/logOutBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="10dp"
      android:layout_marginTop="20dp"
      android:backgroundTint="@color/auth_btn"
      android:paddingVertical="15dp"
      android:text="Log Out"
      android:textColor="@android:color/white"
      android:textSize="15sp"
      app:cornerRadius="30dp"
      app:icon="@drawable/ic_logout"
      app:iconGravity="textEnd"
      app:iconPadding="8dp"
      app:iconTint="@android:color/white" />

  </LinearLayout>
</androidx.core.widget.NestedScrollView>
