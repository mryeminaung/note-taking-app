<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  tools:context=".fragments.SettingsFragment">

  <!-- Profile Header Background -->
  <View
    android:id="@+id/avatar_bg"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/avatar_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <!-- Profile Header -->
  <LinearLayout
    android:id="@+id/profileHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="-60dp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/avatar_bg">

    <ImageView
      android:id="@+id/imgAvatar"
      android:layout_width="90dp"
      android:layout_height="90dp"
      android:background="@drawable/circle_bg"
      android:padding="8dp"
      android:scaleType="centerCrop"
      android:src="@drawable/account_circle" />

    <TextView
      android:id="@+id/tvUsername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="Ye Min Aung"
      android:textColor="@color/black"
      android:textSize="25sp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/tvBio"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:text="Learn while you build and build while you learn"
      android:textColor="@color/deep_blue"
      android:textSize="14sp" />
  </LinearLayout>

  <!-- Scrollable Content -->
  <ScrollView
    android:id="@+id/scrollContent"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:fillViewport="true"
    android:scrollbars="none"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profileHeader">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:paddingHorizontal="15dp">

      <!-- Notes Summary -->
      <TextView
        android:id="@+id/tvNotesSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Notes Summary"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

      <!-- Notes and Starred Cards -->
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Notes Card -->
        <com.google.android.material.card.MaterialCardView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginHorizontal="8dp"
          android:layout_weight="1"
          app:cardCornerRadius="15dp"
          app:cardElevation="1dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
              android:id="@+id/tvNotesTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Notes"
              android:textSize="17sp"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/tvNotesCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="12"
              android:textColor="@android:color/holo_blue_dark"
              android:textSize="22sp"
              android:textStyle="bold" />

          </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Starred Card -->
        <com.google.android.material.card.MaterialCardView
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:layout_marginHorizontal="8dp"
          android:layout_weight="1"
          app:cardCornerRadius="15dp"
          app:cardElevation="1dp">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
              android:id="@+id/tvStarredTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Starred"
              android:textSize="17sp"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/tvStarredCount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="5"
              android:textColor="@android:color/holo_orange_dark"
              android:textSize="22sp"
              android:textStyle="bold" />

          </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
      </LinearLayout>

      <!-- Settings Title -->
      <TextView
        android:id="@+id/tvNotesSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

      <!-- Settings Rows -->
      <LinearLayout
        android:id="@+id/settingsRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <!-- Change Username -->
        <LinearLayout
          android:id="@+id/rowChangeUsername"
          style="@style/SettingRow">

          <ImageView
            style="@style/SettingRowIcon"
            android:src="@drawable/ic_person" />

          <TextView
            style="@style/SettingRowText"
            android:text="Change Username" />

          <ImageView
            style="@style/SettingRowChevron"
            android:src="@drawable/ic_chevron_right" />
        </LinearLayout>

        <!-- Change Password -->
        <LinearLayout
          android:id="@+id/rowChangePassword"
          style="@style/SettingRow">

          <ImageView
            style="@style/SettingRowIcon"
            android:src="@drawable/ic_lock" />

          <TextView
            style="@style/SettingRowText"
            android:text="Change Password" />

          <ImageView
            style="@style/SettingRowChevron"
            android:src="@drawable/ic_chevron_right" />
        </LinearLayout>

        <!-- Theme Preference -->
        <LinearLayout
          android:id="@+id/rowTheme"
          style="@style/SettingRow">

          <ImageView
            style="@style/SettingRowIcon"
            android:src="@drawable/ic_palette" />

          <TextView
            style="@style/SettingRowText"
            android:text="Theme Preference" />

          <ImageView
            style="@style/SettingRowChevron"
            android:src="@drawable/ic_chevron_right" />
        </LinearLayout>
      </LinearLayout>

      <!-- Space to push logout button to bottom -->
      <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

      <!-- Logout Button -->
      <com.google.android.material.button.MaterialButton
        android:id="@+id/logOutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/deep_blue"
        android:paddingVertical="15dp"
        android:text="Log Out"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="30dp" />

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
