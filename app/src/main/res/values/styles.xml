<resources>

  <style name="Widget.Theme.NoteTakingapp.ButtonBar.Fullscreen" parent="">
    <item name="android:background">@color/black_overlay</item>
    <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
  </style>

  <style name="BottomNavigationActiveText" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/light_blue_900</item>
  </style>

  <style name="BottomNavigationInactiveText" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">13sp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="SettingRow">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">56dp</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:paddingStart">10dp</item>
    <item name="android:paddingEnd">10dp</item>
    <item name="android:background">?attr/selectableItemBackground</item>
  </style>

  <style name="SettingRowIcon">
    <item name="android:layout_width">40dp</item>
    <item name="android:layout_height">40dp</item>
    <item name="android:padding">8dp</item>
    <item name="android:background">@drawable/rounded_icon_bg</item>
    <item name="android:tint">@color/sticky_gray</item>
  </style>

  <style name="SettingRowText">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/app_text</item>
    <item name="android:layout_marginStart">12dp</item>
  </style>

  <style name="SettingRowChevron">
    <item name="android:layout_width">35dp</item>
    <item name="android:layout_height">35dp</item>
    <item name="android:tint">@color/deep_blue</item>
  </style>

  <style name="CustomMaterialDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">2dp</item>
    <item name="android:background">@color/white</item>
  </style>

</resources>