<resources>
  <!-- Base application theme -->
  <style name="Base.Theme.NoteTakingapp" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- App colors -->
    <item name="colorPrimary">@color/white</item>
    <item name="backgroundTint">@color/deep_blue</item>

    <!-- System Nav + Status Bar -->
    <item name="android:navigationBarColor">@color/deep_blue</item>
    <item name="android:statusBarColor">@color/deep_blue</item>

    <!-- Keep system icons/text white -->
    <item name="android:windowLightNavigationBar">false</item>
    <item name="android:windowLightStatusBar">false</item>
  </style>

  <style name="Theme.NoteTakingapp" parent="Base.Theme.NoteTakingapp" />
</resources>
